extends layout

block content
  div(class="row header pl-4 py-2")
    div(class="btn-group ")
      button(type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")="Blackwolf"
      div(class="dropdown-menu")
        button(class="dropdown-item" type="button")="Decathalon"
        button(class="dropdown-item" type="button")="Anaconda"
  div(class="content ml-2")
    h1(class="pt-3")=title
    h2 Clearance products for your camping, trekking, hiking & adventure needs
    each val in blackwolfProducts
      li(class="mb-3")
        div(class="row")
          div(class="col-3")
            a(href=val.prodURL target="blank")
              img(class="imgThumb" src=val.prodImage)
          div(class="col-9 pl-3")
            p
              u
                a(href=val.prodURL target="blank")=val.title
            div(class="row ml-1")
              strike(class="pr-2")="$"+val.origPrice
              p(class="text-dark")=val.salePrice
            a(href=val.prodURL target="blank")
              button(class="btn-success")="See more"
